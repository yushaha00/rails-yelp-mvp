<h1>New Review for <%= @restaurant.name %></h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating, collection: 1..5, prompt: "Select a rating" %>
  <%= f.input :content %>
  <%= f.button :submit, "Submit Review" %>
<% end %>

<%= link_to "Back to #{@restaurant.name}", restaurant_path(@restaurant) %>

